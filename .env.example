# Backend Environment Variables
# IMPORTANT: Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Server Configuration
PORT=3000
NODE_ENV=development

# Backend URL (used for webhook endpoint generation)
# Development: http://localhost:3000
# Production: https://api.csr26.it or your production URL
BACKEND_URL=http://localhost:3000

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=csr26_impact_processor
DB_USER=postgres
DB_PASSWORD=your_database_password_here

# Stripe Configuration
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Frontend URL (for CORS and email links)
# Development: http://localhost:5173
# Production: https://csr26.it or your production URL
FRONTEND_URL=http://localhost:5173

# JWT Secret (for session authentication - 30-day tokens)
# Generate a random string for production
JWT_SECRET=your_jwt_secret_key_change_in_production

# Admin Configuration (for admin panel access)
ADMIN_SKU=ADMIN-ACCESS-2026
ADMIN_SECRET_CODE=CSR26-ADMIN-SECURE-2026

# Email Configuration (Resend API for transactional emails)
# Get your API key from https://resend.com/api-keys
# OPTIONAL: If not set, email functionality will be disabled (dev mode only)
RESEND_API_KEY=re_your_resend_api_key_here
FROM_EMAIL=CSR26 <noreply@csr26.it>
